@model Selectio.Models.SqlTasksViewModels.TaskViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@Html.ValidationSummary(false)

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>SqlTask</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Creates" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Creates" class="form-control"></textarea>
                <span asp-validation-for="Creates" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Inserts" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Inserts" class="form-control" ></textarea>
                <span asp-validation-for="Inserts" class="text-danger" />
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Solving" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Solving" class="form-control" ></textarea>
                <span asp-validation-for="Solving" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsWriteAction" />
                    <label asp-for="IsWriteAction"></label>
                </div>
            </div>
        </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
