@model IEnumerable<Selectio.Models.SqlSolvingViewModels.SqlTaskViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tasks</h2>

<ol>
    

@foreach (var t in Model)
{
    <li>
        <a asp-controller="SqlSolvings" asp-action="Create" asp-route-id="@t.Id">

            @if (t.IsSolved)
            {
                <span class="text-success"> solved! </span>
            }
            else
            {
                <span class="text-danger"> not solved!</span>
            }

            @t.Name (solved @t.SolvingsCount times)
        </a>
    </li>
}
</ol>
